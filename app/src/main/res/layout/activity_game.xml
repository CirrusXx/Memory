<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <ImageButton

        android:id="@+id/picture0"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:onClick="LoadImageFromStorageOnClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/picture1"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:onClick="LoadImageFromStorageOnClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/picture2"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="168dp"
        android:onClick="LoadImageFromStorageOnClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/picture4"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="16dp"
        android:onClick="LoadImageFromStorageOnClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/picture5"
        android:layout_width="73dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        android:onClick="LoadImageFromStorageOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/picture3"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="156dp"
        android:onClick="LoadImageFromStorageOnClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/picture6"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:layout_marginStart="156dp"
        android:layout_marginBottom="40dp"
        android:onClick="LoadImageFromStorageOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/picture7"
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:onClick="LoadImageFromStorageOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textForCompletingAGame"
        android:layout_width="211dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="WYGRALES"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>